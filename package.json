{
  "name": "@frat/sane",
  "version": "4.2.1",
  "description": "Sane aims to be fast, small, and reliable file system watcher.",
  "main": "index.js",
  "repository": "ratson/sane",
  "files": [
    "src",
    "index.js",
    "index.d.ts"
  ],
  "scripts": {
    "test": "npm run format && eslint src/ test/ index.js && mocha --bail test/test.js && mocha --bail test/utils-test.js && mocha --bail 'test/watchexec_*-test.js'",
    "test:debug": "mocha debug --bail",
    "format": "prettier --trailing-comma es5 --single-quote --write index.js 'src/**/*.js' 'test/**/*.js'"
  },
  "bin": {
    "sane": "src/cli.js"
  },
  "keywords": [
    "watch",
    "file",
    "fswatcher",
    "watchfile",
    "fs",
    "watching"
  ],
  "author": "amasad",
  "license": "MIT",
  "dependencies": {
    "@cnakazawa/watch": "^1.0.4",
    "anymatch": "^3.1.2",
    "capture-exit": "^2.0.0",
    "exec-sh": "^0.4.0",
    "execa": "^5.0.0",
    "fb-watchman": "^2.0.1",
    "micromatch": "^4.0.4",
    "minimist": "^1.2.5",
    "walker": "~1.0.7"
  },
  "devDependencies": {
    "eslint": "^7.25.0",
    "mocha": "^8.3.2",
    "prettier": "^2.2.1",
    "rimraf": "~3.0.2",
    "tmp": "0.2.1"
  },
  "engines": {
    "node": ">= 10.*"
  },
  "publishConfig": {
    "access": "public"
  },
  "mocha": {
    "timeout": 5000
  }
}
